Q : Calculate the sum of first n number?

#include<iostream>
using namespace std;
int main()
{
    int n;
    int sum=0;
    cout<<"Sum calculator "<<endl;
    cout<<"Enter the number till which you want to calculate sum..";
    cin>>n;
    for (int i = 0; i <= n; i++)
    {
        sum = sum+i;
    }
    cout<<"The sum of first "<<n<<" number is "<<sum;
}
