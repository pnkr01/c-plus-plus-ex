Q : Find the maximum of 3 number using if-else ?


#include<iostream>
using namespace std;
float a,b,c;
int main()
{
    cout<<"Maximum of three number calculator "<<endl;
    cout<<"Enter three number..";
    cin>>a>>b>>c;
    if(a>b)
    {
        if(a>c)
        {
            cout<<a<<" is max";
        }
        else
        {
            cout<<c<<" is max";
        }
    }
    else
    {
        if(b>c)
        {
            cout<<b<<" is max";
        }
        else
        {
            cout<< c <<" is max";
        }
    }
}
